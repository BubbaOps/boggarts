{
  "name": "bubbaops/boggarts",
  "description": "Identify mischievous, invisible, and ambiguous Unicode whitespace characters (zero width spaces, no-break spaces, and similar).",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Bubba Hines",
      "email": "bubba@stechstudio.com",
      "role": "Developer"
    }
  ],
  "require": {
    "nesbot/carbon": "^2.66",
    "ext-mbstring": "*",
    "php": "^8.1",
    "spatie/laravel-package-tools": "^1.14.0",
    "illuminate/contracts": "^10.0"
  },
  "require-dev": {
    "laravel/pint": "^1.0",
    "nunomaduro/collision": "^7.9",
    "nunomaduro/larastan": "^2.0.1",
    "orchestra/testbench": "^8.0",
    "pestphp/pest": "^2.0",
    "pestphp/pest-plugin-arch": "^2.0",
    "pestphp/pest-plugin-laravel": "^2.0",
    "phpstan/extension-installer": "^1.1",
    "phpstan/phpstan-deprecation-rules": "^1.0",
    "phpstan/phpstan-phpunit": "^1.0",
    "spatie/laravel-ray": "^1.26"
  },
  "autoload": {
    "psr-4": {
      "BubbaOps\\Boggarts\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "BubbaOps\\Boggarts\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "post-autoload-dump": "@php ./vendor/bin/testbench package:discover --ansi",
    "analyse": "vendor/bin/phpstan analyse",
    "test": "vendor/bin/pest",
    "test-coverage": "vendor/bin/pest --coverage",
    "format": "vendor/bin/pint"
  },
  "config": {
    "sort-packages": true,
    "allow-plugins": {
      "pestphp/pest-plugin": true,
      "phpstan/extension-installer": true
    }
  },
  "extra": {
    "laravel": {
      "providers": [
        "BubbaOps\\Boggarts\\BoggartsServiceProvider"
      ],
      "aliases": {
        "CondomanagerApi": "BubbaOps\\Boggarts\\Facades\\Boggarts"
      }
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}
